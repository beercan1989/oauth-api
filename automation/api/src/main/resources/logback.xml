<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.http.headers" level="DEBUG"/>
    <logger name="org.apache.http.impl.conn.DefaultClientConnection" level="DEBUG"/>

    <logger name="uk.co.baconi.oauth.automation.api" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
